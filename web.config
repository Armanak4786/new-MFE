<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- Enable CORS for Module Federation -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Origin, X-Requested-With, Content-Type, Accept" />
      </customHeaders>
    </httpProtocol>

    <!-- URL Rewrite Rules -->
    <rewrite>
      <rules>
        <!-- Handle dealer remote -->
        <rule name="Dealer Remote Entry" stopProcessing="true">
          <match url="^dealer/remoteEntry\.js$" />
          <action type="Rewrite" url="/dealer/remoteEntry.js" />
        </rule>
        
        <!-- Handle commercial remote -->
        <rule name="Commercial Remote Entry" stopProcessing="true">
          <match url="^commercial/remoteEntry\.js$" />
          <action type="Rewrite" url="/commercial/remoteEntry.js" />
        </rule>
        
        <!-- Handle admin remote -->
        <rule name="Admin Remote Entry" stopProcessing="true">
          <match url="^admin/remoteEntry\.js$" />
          <action type="Rewrite" url="/admin/remoteEntry.js" />
        </rule>

        <!-- Dealer app routes -->
        <rule name="Dealer App" stopProcessing="true">
          <match url="^dealer/?(.*)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="/dealer/index.html" />
        </rule>

        <!-- Commercial app routes -->
        <rule name="Commercial App" stopProcessing="true">
          <match url="^commercial/?(.*)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="/commercial/index.html" />
        </rule>

        <!-- Admin app routes -->
        <rule name="Admin App" stopProcessing="true">
          <match url="^admin/?(.*)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="/admin/index.html" />
        </rule>

        <!-- Shell app routes (default) -->
        <rule name="Shell App" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/(dealer|commercial|admin)/" negate="true" />
          </conditions>
          <action type="Rewrite" url="/index.html" />
        </rule>
      </rules>
    </rewrite>

    <!-- Static file handling -->
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
      <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
      <mimeMap fileExtension=".js" mimeType="application/javascript" />
      <mimeMap fileExtension=".mjs" mimeType="application/javascript" />
    </staticContent>

    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>

    <!-- Compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
  </system.webServer>
</configuration>
